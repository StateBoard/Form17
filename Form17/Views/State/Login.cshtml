
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h2 {
        font-weight: 200;
        font-size: 30px;
        color: midnightblue;
        text-align: center;
    }

    .validation-summary-errors ul li {
        text-align: center;
    }
</style>
<h2>State Login</h2>

@using (Html.BeginForm())
{
    <div class="row" style="padding:10px;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group text-center col-md-offset-3 col-md-2">
            <label style="padding-top:5px;">Username:</label><span style="color:Red">*</span>
        </div>
        <div class="form-group col-md-3 col">
            <input type="text" name="Username" id="Username" class="form-control" maxlength="100" required />
        </div>
    </div>
    <div class="row" style="padding:10px;">
        <div class="form-group text-center col-md-offset-3 col-md-2">
            <label style="padding-top:5px;">Password:</label><span style="color:Red">*</span>
        </div>
        <div class="form-group col-md-3 col">
            <input type="password" name="Password" id="Password" class="form-control" maxlength="50" required />
        </div>
    </div>
    <div class="row form-group col-md-offset-5" style="padding:10px;">
        <input type="submit" class="btn btn-primary" name="btnSubmit" id="btnSubmit" />
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('li').removeClass('active');
        $('#Login').addClass(' active');
    });
</script>