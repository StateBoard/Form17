@model Form17.Models.DownloadStateDataModel
@{
    ViewBag.Title = "ExportToCSVStateLevel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ExportToCSVStateLevel", "State", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row" style="padding-left:15px">
        <div class="form-group col-md-3">
            <label for="STD">Select Standard:</label><span style="color:Red">*</span>
            <select id="STD" name="STD" class="form-control">
                <option value="0">--Select Standard--</option>
                <option value="SSC">SSC</option>
                <option value="HSC">HSC</option>
            </select>
        </div>
        <div class="form-group col-md-3">
            <label for="Start_Date"> Start Date:</label><span style="color:Red">*</span>
            @Html.EditorFor(model => model.Start_Date, new { htmlAttributes = new { @class = "form-control datepicker", @readonly = "@readonly" } })
        </div>
        <div class="form-group col-md-3">
            <label for="End_Date"> End_Date:</label><span style="color:Red">*</span>
            @Html.EditorFor(model => model.End_Date, new { htmlAttributes = new { @class = "form-control datepicker", @readonly = "@readonly" } })
        </div>
        <div class="col-md-3 form-group" style="padding-top:22px">
            <input type="submit" name="btnSubmit" value="Export to CSV" id="btnSubmit" class="btn btn-primary" />
        </div>
    </div>
}



